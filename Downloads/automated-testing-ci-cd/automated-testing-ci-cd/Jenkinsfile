pipeline {
  agent any
  stages {
    stage('Checkout') {
      steps { checkout scm }
    }
    stage('Detect Changes & Orchestrate Tests') {
      steps { sh './orchestrator.sh' }
    }
    stage('Build Docker Image') {
      steps { sh 'docker build -t my-app:latest .' }
    }
    stage('Deploy to Kubernetes') {
      steps { sh 'kubectl apply -f k8s/deployment.yaml' }
    }
  }
}